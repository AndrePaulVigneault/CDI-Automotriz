@model CDI_Automotriz.ViewModels.CrearProyectoViewModel
@{
    ViewBag.Title = "CrearProyecto";
}

<div class="row">
    <div class="col-xs-6 col-xs-offset-3 panel panel-default">
        <form class="panel-body" asp-controller="Project" asp-action="CrearProyecto" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descripcion"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagenPerfil"></label>
                <input asp-for="ImagenPerfil" />
                <span asp-validation-for="ImagenPerfil"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imagenes"></label>
                <input asp-for="Imagenes" />
            </div>
            <div>
                <input class="btn btn-default" type="submit" value="Agregar" />
            </div>
        </form>
    </div>
</div>



 






