@model CDI_Automotriz.ViewModels.Product.ProductDetallesViewModel
@{
    ViewBag.Title = "Detalles";
}

<h2>Detalles del producto</h2>

<div>
    <label>
        Producto: @Model.producto.Nombre
    </label>
</div>

<div>
    <label>
        Descripcion: @Model.producto.Descripcion
    </label>
</div>
<div>
    <label>
        Precio: @Model.producto.Precio Colones
    </label>
</div>

<div>
    @foreach (var Imagen in Model.producto.Imagenes)
    {
        <img class="ImagenesDetalles img-thumbnail" src="~/Uploads/@Imagen.Path" />
    }
</div>
